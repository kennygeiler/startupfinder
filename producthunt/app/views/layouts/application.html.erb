<!DOCTYPE html>
<html>
  <head>
    <title>Producthunt</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Slabo+13px' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Exo:400,700|Passion+One:400,700|Bevan|PT+Sans+Caption' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/"><i class="fa fa-users"></i>  BetaFeed</a></h1>
        </li>
      </ul>
      <section class="top-bar-section nav-buttons">
        <ul class="right">
          <li>
            <%= link_to new_post_path do %>
              <i class="fa fa-plus-circle"></i>
            <% end %>
          </li>
          <% if current_user %>
            <!-- <li><%= link_to "Profile", user_path(current_user) %></li> -->
            <li>
              <%= link_to signout_path do %>
                <i class="fa fa-sign-out"></i>
              <% end %>
            </li>
             <li>
              <a href="#"><i class="fa fa-arrow-up nav-arrow"></i> <%= current_user.karma %></a>
            </li>
          <% else %>
            <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
          <% end %>
        </ul>
      </section>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>