<% if post.staff_pick %>
  <div class="staff-pick-post">
    <h2>Staff Picks</h2>
    <div class='post'>
      <h3> <%= post.title %> </h3>
      <p> <%= post.link %> </p>
      <p>
        <% if post.hiring %>
          hiring!
        <% else %>
          not hiring
        <% end %>
      </p>
      <p> <%= post.user.username %></p>
    </div>
  </div>
<% else %>
  <div class="not-staff-pick-post">
    <h2>Top Voted Posts</h2>
    <div class='post'>
      <h3> <%= post.title %> </h3>
      <p> <%= post.link %> </p>
      <p>
        <% if post.hiring %>
          hiring!
        <% else %>
          not hiring
        <% end %>
      </p>
      <p> <%= post.user.username %></p>
    </div>
  </div>
<% end %>

